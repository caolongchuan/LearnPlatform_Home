<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_detial_name"
        android:text="快开门式压力容器"
        android:layout_marginLeft="50dp"
        android:textSize="15dp"
        android:singleLine="true"
        android:maxEms="6"
        android:ellipsize="end"
        android:textColor="@color/clc_black"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_detial_sign"
        android:text="R1"
        android:textSize="15dp"
        android:textColor="@color/clc_black"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_goto_studied"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_goto_studied"
        android:background="@drawable/shape_recently_goto_studied"
        android:text="学习"
        android:textColor="@color/clc_black"
        android:textSize="10dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>