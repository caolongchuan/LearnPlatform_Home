<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActualActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/clc_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_left_arrow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实际操作"
            android:textColor="@color/clc_gray"
            android:textSize="25dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_sjcz_title"
        android:layout_margin="7dp"
        android:textColor="@color/clc_black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!--
    android:text="硫化罐内工作压力、温度超过额定值，应如何处理？"
    android:text="实际操作内容实际操作内容实际操作内容实际操作内容实际操作内容实际操作内容实际操作内容实际操作内容"
-->

    <TextView
        android:id="@+id/tv_sjcz_nr"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:textColor="@color/clc_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>