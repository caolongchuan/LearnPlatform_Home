<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/tv_tital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="用户注册"
        android:textColor="@color/textBlack"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tital"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Register"
        android:textColor="@color/textGray"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/ll_user_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/iv_user_addr"
            android:src="@mipmap/login_user_addr"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_addr"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:text="所在城市"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_user_addr"
            android:layout_toRightOf="@id/iv_user_addr"
            android:layout_marginLeft="100dp"
            android:textSize="23dp"
            android:textColor="@color/textBlack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_invitation_code"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp">
        <ImageView
            android:id="@+id/iv_user_name"
            android:src="@mipmap/login_user_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:text="昵称"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_toRightOf="@id/iv_user_name"
            android:layout_marginLeft="100dp"
            android:textColor="@color/textBlack1"
            android:textSize="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_invitation_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/iv_invitation_code"
            android:src="@mipmap/login_invitation_code"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_yqm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:layout_toRightOf="@+id/iv_invitation_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:hint="请输入邀请码"
            android:textSize="20dp" />
    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/ll_enter_phone_number"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/lineBack"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/ll_enter_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/iv_enter_phone_number"
            android:src="@mipmap/login_enter_phone_number"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:layout_toRightOf="@+id/iv_enter_phone_number"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:hint="请输入手机号"
            android:textSize="20dp" />
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/ll_sms_veri_code"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/lineBack"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/ll_sms_veri_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="4dp">
        <ImageView
            android:id="@+id/iv_sms_code"
            android:src="@mipmap/login_sms_veri_code"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_get_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Transparent"
            android:layout_toRightOf="@+id/iv_sms_code"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:hint="短信验证码"
            android:textSize="20dp" />
        <Button
            android:id="@+id/bte_get_xzm"
            android:text="获取验证码"
            android:background="@drawable/selector_main_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/ll_doit"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/lineBack"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/ll_doit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingRight="50dp"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/btn_doit"
            android:background="@drawable/selector_main_button"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即体验" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_pb"
        android:background="@color/ProgressBar_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="正在自动登陆 请稍等..."
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/pb_1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/clc_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>