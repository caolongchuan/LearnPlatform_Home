<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.JobMsgActivity">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/clc_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_left_arrow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="蓝领求职"
            android:textColor="@color/clc_gray"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clc_blue"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邢台市"
            android:textColor="@color/clc_white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/tv_location"
            android:src="@mipmap/icon_llqz_marka" />

        <EditText
            android:id="@+id/et_search_text"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_location"
            android:background="@drawable/shape_card_bg"
            android:drawableLeft="@mipmap/icon_search_black"
            android:hint="请输入关键词"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/ll_fabu"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_llqz_fabu_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_fabu" />

            <TextView
                android:id="@+id/btn_fabu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="@color/clc_white"
                android:textSize="16dp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/clc_blue"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@id/tv_msg"
            android:layout_marginLeft="8dp"
            android:text="基本信息"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_job_msg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:text="技术工人"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/clc_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_gzdy"
            android:text="2000-5000"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:textColor="@color/clc_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fabu_time"
            android:text="发布日期：2020.01.30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/lineBack"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_zw"
            android:text="招聘职位"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_zpzw"
            android:text="锅炉作业"
            android:textSize="16dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zprs"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="招聘人数"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_zprs"
            android:text="3人"
            android:textSize="16dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="所在城市"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_city"
            android:text="邢台市桥西区"
            android:textSize="16dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="联系电话"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lxdh"
            android:text="18888889999"
            android:textSize="16dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/clc_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jlms"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/clc_blue"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@id/tv_msg"
            android:layout_marginLeft="8dp"
            android:text="简历描述"
            android:textSize="20dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_jlms"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="简历描述简历描述简历描述简历描述简历描述简历描述简历描述简历描述简历描述简历描述"
        android:textSize="17dp"
        android:textColor="@color/textBlack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_qzyx"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/clc_blue"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@id/tv_msg"
            android:layout_marginLeft="8dp"
            android:text="求职意向"
            android:textSize="20dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qzyx"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="求职意向求职意向求职意向求职意向求职意向求职意向求职意向求职意向求职意向求职意向"
        android:textSize="17dp"
        android:textColor="@color/textBlack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_zwms"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/clc_blue"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@id/tv_msg"
            android:layout_marginLeft="8dp"
            android:text="职位描述"
            android:textSize="20dp"
            android:textColor="@color/clc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_zwms"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述"
        android:textSize="17dp"
        android:textColor="@color/textBlack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_msyp"
            android:background="@drawable/shape_button_msyp_bg"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:text="马上应聘"
            android:textSize="20dp"
            android:textColor="@color/clc_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>